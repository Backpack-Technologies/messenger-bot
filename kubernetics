apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: messenger-bot
spec:
  replicas: 1
  selector:
    matchLabels:
      app: messenger-bot
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: messenger-bot
      name: messenger-bot
    spec:
      containers:
        - name: messenger-bot
          image: gcr.io/backpack-782cb/messenger-bot:latest
          env:
            - name: CERT_PATH
              value: /certs/tls.crt
            - name: KEY_PATH
              value: /certs/tls.key
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 3000
              protocol: TCP
          resources:
            requests:
              cpu: 100m
              memory: 100Mi
          volumeMounts:
            - mountPath: /certs
              name: ssl
      restartPolicy: Always
      volumes:
        - name: ssl
          secret:
            secretName: backpackbang-com-2018
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: messenger-bot
  name: messenger-bot
spec:
  type: LoadBalancer
  loadBalancerIP: 35.244.12.237
  ports:
    - name: messenger-bot
      port: 443
      protocol: TCP
      targetPort: 3000
  selector:
    app: messenger-bot